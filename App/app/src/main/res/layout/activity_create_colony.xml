<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/createPageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#09AB4D"
        android:text="@string/createColonyPageHeader"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/createLocationCategoryHeader"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageLocationHeader"
            android:textSize="25sp"
            android:textColor="#09AB4D"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/createAreaRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowArea"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1" />

        <Spinner
            android:id="@+id/createAreaSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createHostRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowHost"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createHostSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createHiveNumRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowHiveNum"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createHiveNumSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createColonyNumRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowColonyNum"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <EditText
            android:id="@+id/createColonyNumInput"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="@string/createColonyPageInputHint"
            android:textSize="20sp"
            android:layout_columnWeight="5"
            android:inputType="number"/>

        <TextView
            android:id="@+id/createSpacer1"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/createCharacteristicsCategoryHeader"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageCharacteristicsHeader"
            android:textSize="25sp"
            android:textColor="#09AB4D"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/createColonySourceRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowColonySource"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <EditText
            android:id="@+id/createColonySourceInput"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="@string/createColonyPageInputHint"
            android:textSize="20sp"
            android:layout_columnWeight="5"
            android:inputType="textCapSentences|textAutoComplete"/>

        <TextView
            android:id="@+id/createQueenRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowQueen"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createQueenSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createGeneticsRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowGenetics"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createGeneticsSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createInstallationRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowInstallation"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createInstallationSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createColonyAddInfoRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowAddInfo"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <EditText
            android:id="@+id/createColonyAdditionalInfoEditText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="@string/createColonyPageInputHint"
            android:textSize="20sp"
            android:layout_columnWeight="5"
            android:inputType="textCapSentences|textAutoComplete"/>

        <TextView
            android:id="@+id/createSpacer2"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/createSetupCategoryHeader"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageSetupHeader"
            android:textSize="25sp"
            android:textColor="#09AB4D"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/createColonyInstallDateRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowInstallDate"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <EditText
            android:id="@+id/createColonyInstallDateEditText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="@string/createColonyPageInputHint"
            android:textSize="20sp"
            android:layout_columnWeight="5"
            android:inputType="date"/>

        <TextView
            android:id="@+id/createColonyHiveTypeRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowHiveType"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createHiveTypeSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createColonyBroodChamberRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowBroodChamber"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createBroodChamberSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createColonyQueenExcluderRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowQueenExcluder"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <Spinner
            android:id="@+id/createQueenExcluderSpinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_columnWeight="5" />

        <TextView
            android:id="@+id/createColonyAddPhotoRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/createColonyPageRowAddPhoto"
            android:textSize="20sp"
            android:textColor="#09AB4D"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/createAddedPhotoImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="5"
            android:contentDescription="@string/createColonyPagePhotoDescription" />

    </GridLayout>

    <TextView
        android:id="@+id/createSpacer3"
        android:layout_height="20dp"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/createColonySubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/createColonyPageSubmitButton"
        android:background="#09AB4D"
        android:textColor="#FFFFFF"
        android:padding="5dp" />

    <TextView
        android:id="@+id/createSpacer4"
        android:layout_height="10dp"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/createColonyReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/createColonyPageReturnButton"
        android:background="#09AB4D"
        android:textColor="#FFFFFF"
        android:padding="5dp"/>

</LinearLayout>